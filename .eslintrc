{
	"env": {
		"browser": true,
		"commonjs": true,
		"es2021": true,
		"node": true
	},
	"extends": [
		"standard"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
        "jsx": true
    }
  },
	"rules": {
		"linebreak-style": ["error", "windows"],
		"quotes": ["error", "single"],
		"semi": ["error","never"],
		"no-console": 0,
		"camelcase": 0
	}
}